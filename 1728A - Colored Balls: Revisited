#include <bits/stdc++.h>
using namespace std;
 
int main(){
    
    int t=1; cin>>t;
    while(t--){
        int n; cin>>n;
        int arr[n];
        int ans = 1;
        int ii = 1;
        for(int i=0; i<n; i++){
            cin>>arr[i];
            if(arr[i]>=ans){
                ans = arr[i];
                ii = i+1;
            }
        }
        cout<<ii<<endl;
    }
    return 0;
}
