#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    long long t = 1;
    cin >> t;
    while (t--)
    {
        long long n, m;
        cin >> n >> m;
        if (n > m)
            swap(n, m);
        if (n == 1 && m == 1)
            cout << 0 << endl;
        else
            cout << 2 * (n - 1) + m << endl;
    }
    return 0;
}
