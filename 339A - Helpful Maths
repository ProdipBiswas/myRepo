#include <iostream>
#include <string.h>
#include <bits/stdc++.h>

using namespace std;

int main()
{
    char s[100] = "1+4+3+5+9";
    cin >> s;
    int l = strlen(s);
	sort(s, s + l);
    int i;
    for (i = l / 2; i < l - 1; i++)
    {
        cout << s[i] << "+";
    }
    cout << s[l - 1] << endl;

    return 0;
}
