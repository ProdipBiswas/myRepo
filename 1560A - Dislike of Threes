#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    int t = 1;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        int ans = 1;
        int i = 1;
        for (; ans <= n; i++)
        {
            if (i % 3 == 0 || i % 10 == 3)
            {
            }
            else
                ans++;
        }
        cout << i-1 << endl;
    }
    return 0;
}
