#include <iostream>
using namespace std;
 
int main()
{
    int t, n, i;
    cin >> t;
    for (i = 0; i < t; i++)
    {
        cin >> n;
        
        if (n == 1)
        {
            cout << 2 << endl;
        }
        else if (n % 3 == 0)
        {
            cout << n / 3 << endl;
        }
        else if (n % 3 == 1)
        {
            cout << (n + 2) / 3 << endl;
        }
        else
        {
            cout << (n + 1) / 3 << endl;
        }
    }
}
