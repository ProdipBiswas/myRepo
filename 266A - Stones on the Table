#include <iostream>
using namespace std;

int main()
{
    int n;
    char s[51];
    int i;
    int count = 0;

    cin >> n;
    for (i = 0; i < n; i++)
    {
        cin >> s[i];
    }

    for (i = 0; i < n - 1; i++)
    {
        if (s[i] == s[i + 1])
        {
            count++;
        }
    }

    cout << count << endl;

    return 0;
}
